Vagrant.configure('2') do |config|
  config.ssh.password = 'root'
  config.ssh.username = 'root'

  config.vm.define machine['Wazuh1'] do |node|
    config.vm.provider 'docker' do |d|
      d.build_dir = './'
      d.name = 'Wazuh'
      d.expose = [22]
      d.ports = ['2222:22']
      d.has_ssh = true
      d.cmd = ['/usr/sbin/sshd', '-D']
    end
  end

  config.vm.define machine['Wazuh1'] do |node|
    config.vm.provider 'docker' do |d|
